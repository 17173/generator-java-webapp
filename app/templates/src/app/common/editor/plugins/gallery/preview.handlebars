  <style>
    .gallery{
      width: 500px;
      font-size: 12px;
    }

    .gallery-box{
      padding: 0px;
      width: 480px;
      margin: 0px 5px;
      height: 80px;
      overflow: auto;
      overflow-y: hidden;
      white-space:nowrap;
    }

    .gallery-item {
      display: inline-block;
      list-style: none;
      margin: 0px 5px 5px 0px;
      padding: 0px;
    }

    .gallery-foucs-img{
      width: 480px;
      height: 360px;
    }

    .gallery-item-img{
      width: 80px;
      height: 60px;
    }

    .gallery-title-txt {
      position: absolute;
      z-index: 10;
      bottom: 0px;
      color: #fff;
      padding: 15px;
      word-break: break-all;
    }

    .gallery-title-txt b {
      position: absolute;
      z-index: -1;
      background: #000;
      opacity: 0.5;
      top: 0px;
      left: 0px;
      height: 100%;
      width: 100%
    }

    .gallery-foucs{
      position: relative;
      margin:5px 5px;
    }

  </style>
  <div class="gallery">
    <div class="gallery-foucs">
      <img class="gallery-foucs-img"  src="{{first}}"/>
      <p class="gallery-title-txt">
        <span>{{title}}</span>
        <b></b>
      </p>
    </div>
    <ul class="gallery-box">
      {{#each children}}<li class="gallery-item">
        <img class="gallery-item-img" src="{{imgUrl}}" title="{{description}}" alt="{{description}}" />
      </li>
      {{/each}}
    </ul>
  </div>

